  "devDependencies": {
    "babelify": "^7.2.0",
    "browser-sync": "^2.10.0",
    "browserify": "^12.0.1",
    "eslint": "^1.9.0",
    "mkdirp": "^0.5.1",
    "nodemon": "^1.8.1",
    "npm-run-all": "^1.2.13"
  },
  "dependencies": {
    "babel-core": "^6.1.20",
    "babel-preset-es2015": "^6.1.18",
    "body-parser": "^1.14.1",

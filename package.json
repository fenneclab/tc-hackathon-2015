{
  "name": "tc-hackathon-2015",
  "version": "1.0.0",
  "description": "tc-hackathon-2015",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-init": "mkdirp build",
    "build:html": "cp app/*.html ./build",
    "build:js": "browserify app/js/app.js -t [ babelify --presets [ es2015 ] ] -o build/app.js",
    "build": "npm-run-all -s build-init -p build:*",
    "sync": "browser-sync start --reload-delay 500 --files 'build/**/*' --server build --port 5000",
    "api": "nodemon server/ --watch ./server",
    "start": "npm-run-all -p build -p sync api"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fenneclab/tc-hackathon-2015.git"
